# Date Time
#
[time]
command=date '+%Y-%m-%d %I:%M:%S'
interval=5

[batterybar]
command=~/.config/i3blocks-contrib/batterybar/batterybar #run batterybar -h for options
label=bat:
interval=5
markup=pango
